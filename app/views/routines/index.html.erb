<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Routines</h1>

    <% if @routines.any? %>
      <%= link_to 'New Routine', new_routine_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @routines.any? %>
    <div class="bg-white rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :user_id, 'User', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :account_id, 'Account', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :brand_id, 'Brand', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :name, 'Name', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :description, 'Description', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :action_days, 'Action days', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :est_time, 'Est time', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @routines, :total_steps, 'Total steps', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 w-20">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @routines.each do |routine| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                      <td class="p-3"><%= routine.user_id %></td>
                      <td class="p-3"><%= routine.account_id %></td>
                      <td class="p-3"><%= routine.brand_id %></td>
                      <td class="p-3"><%= routine.name %></td>
                      <td class="p-3"><%= routine.description %></td>
                      <td class="p-3"><%= routine.action_days %></td>
                      <td class="p-3"><%= routine.est_time %></td>
                      <td class="p-3"><%= routine.total_steps %></td>
          
            <td>
              <%= link_to "View", routine, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class="bg-white rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Routine</p>
        <%= link_to 'New Routine', new_routine_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
