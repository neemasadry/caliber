<%= form_with(model: catalog) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 12, class: "form-control" %>
  </div>

  <div class="flex flex-wrap overflow-hidden md:-mx-1 lg:-mx-1 xl:-mx-1">

    <div class="w-full overflow-hidden md:my-1 md:px-1 md:w-1/2 lg:my-1 lg:px-1 lg:w-1/2 xl:my-1 xl:px-1 xl:w-1/2">
      <div class="form-group">
        <%= form.label :category, class: "block text-sm font-medium leading-5 text-gray-700" %>

        <div class="relative">
          <%= form.select :category, options_for_select(["Fall", "Spring", "Summer", "Winter"]), { prompt: "Select season..." }, class: "form-control" %>
          <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
        </div>
      </div>
    </div>

    <div class="w-full overflow-hidden md:my-1 md:px-1 md:w-1/2 lg:my-1 lg:px-1 lg:w-1/2 xl:my-1 xl:px-1 xl:w-1/2">
      <div class="form-group">
        <%= form.label :subcategory, class: "block text-sm font-medium leading-5 text-gray-700" %>

        <div class="relative">
          <%= form.select :subcategory, options_for_select(["Fall", "Spring", "Summer", "Winter"]), { prompt: "Select season..." }, class: "form-control" %>
          <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
        </div>
      </div>
    </div>

  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-secondary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
