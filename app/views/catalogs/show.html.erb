<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to 'Catalogs', catalogs_path %> > Catalog #<%= @catalog.id %></h1>
      <%= link_to 'Edit', edit_catalog_path(@catalog), class: "btn btn-link" %>
    </div>

    <div class="flex justify-between items-center mb-4">
      <% if (user_signed_in? && current_account.personal? && @catalog.user != current_user) %>
        <%= render partial: "votable/liking", locals: { likeable: @catalog }  %>
        <%= render partial: "votable/favoriting", locals: { favoritable: @catalog } %>
      <% end %>
    </div>

    <div class="bg-white rounded shadow p-8">
            <div class="mb-4">
        <h5>User</h5>
        <%= @catalog.user.username %>
      </div>
            <div class="mb-4">
        <h5>Account</h5>
        <%= @catalog.account.name %>
      </div>
            <div class="mb-4">
        <h5>Brand</h5>
        <%= @catalog.brand.name if @catalog.brand.present? %>
      </div>
            <div class="mb-4">
        <h5>Title</h5>
        <%= @catalog.title %>
      </div>
            <div class="mb-4">
        <h5>Description</h5>
        <%= @catalog.description %>
      </div>
            <div class="mb-4">
        <h5>Category</h5>
        <%= @catalog.category %>
      </div>
            <div class="mb-4">
        <h5>Total number of outfits</h5>
        <%= @catalog.total_items %>
      </div>
            <div class="mb-4">
        <h5>Total price</h5>
        <%= number_to_currency @catalog.total_price %>
      </div>
          </div>
  </div>
</div>
