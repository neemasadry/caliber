          <% if !@accessories.blank? %>
            <% @accessories.each do |accessory| %>
              <%= content_tag :li, role: :option do %>
                <%= link_to polymorphic_path(accessory), data: { "autocomplete-value": accessory.id }, class: "-m-3 p-3 flex items-start space-x-4 rounded-lg hover:bg-gray-100 transition ease-in-out duration-150" do %>
                  <%= image_tag(accessory.product_images.first.product_image_url, width: 50, height: 50, crop: :fit, gravity: :center) %>
                  <div class="space-y-1">
                    <p class="text-base leading-6 font-medium text-gray-900">
                      <%= accessory.name %> by <%= accessory.brand.name %>
                    </p>
                    <p class="text-sm leading-5 text-gray-500">
                      <%= truncate(accessory.description, length: 100) %>
                    </p>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>

