<%= form_with(model: outfit) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :brand_id %>
    <%= form.text_field :brand_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :occasion %>
    <%= form.text_field :occasion, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dress_code %>
    <%= form.text_field :dress_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total_number_of_products %>
    <%= form.number_field :total_number_of_products, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total_price %>
    <%= form.text_field :total_price, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
