<% if collected_status %>
  <%= button_to(polymorphic_path(collectable, action: "collect"), method: :put, class: "btn btn-small btn-primary mr-2") do %>
    <%= fa_icon("fal fa-minus-circle", class: "mr-2") %>
    Collection - Remove
  <% end %>
<% else %>
  <%= button_to(polymorphic_path(collectable, action: "collect"), method: :put, class: "btn btn-small btn-primary outline mr-2") do %>
    <%= fa_icon("fal fa-plus-circle", class: "mr-2") %>
    Collection - Add
  <% end %>
<% end %>
