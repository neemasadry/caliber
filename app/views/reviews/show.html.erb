<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to 'Reviews', reviews_path %> > Review #<%= @review.id %></h1>
      <%= link_to 'Edit', edit_review_path(@review), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
            <div class="mb-4">
        <h5>Reviewable</h5>
        <%= @review.reviewable %>
      </div>
            <div class="mb-4">
        <h5>User</h5>
        <%= @review.user %>
      </div>
            <div class="mb-4">
        <h5>Title</h5>
        <%= @review.title %>
      </div>
            <div class="mb-4">
        <h5>Body</h5>
        <%= @review.body %>
      </div>
            <div class="mb-4">
        <h5>Quality</h5>
        <%= @review.quality %>
      </div>
            <div class="mb-4">
        <h5>Value</h5>
        <%= @review.value %>
      </div>
            <div class="mb-4">
        <h5>Compliment</h5>
        <%= @review.compliment %>
      </div>
            <div class="mb-4">
        <h5>Ratings</h5>
        <%= @review.ratings %>
      </div>
          </div>
  </div>
</div>
