<%= form_with(model: [reviewable, review]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.rich_text_area :body, data: { controller: "mentions", target: "mentions.field" }, class: "rich-textarea" %>
  </div>

  <div class="mt-4 mb-6 border-t border-b border-gray-200 pt-4">
    <%= render partial: "reviews/ratings/#{params[:model_name].downcase}", locals: {f: form} %>
  </div>

  <div class="form-group">
    <%= form.label :quality %>

    <div class="relative">
      <%= form.select :quality, options_for_select(1..10), { include_blank: true }, class: "form-control" %>
      <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :value %>

    <div class="relative">
      <%= form.select :value, options_for_select(1..10), { include_blank: true }, class: "form-control" %>
      <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :compliment %>

    <div class="relative">
      <%= form.select :compliment, options_for_select(1..4), { include_blank: true }, class: "form-control" %>
      <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
    </div>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', [reviewable, form.object], class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
