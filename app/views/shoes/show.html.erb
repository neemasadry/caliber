      <h1 class="h3"><%= link_to 'Shoes', shoes_path %> > Shoe #<%= @shoe.id %></h1>
      <%= link_to 'Edit', edit_shoe_path(@shoe), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
