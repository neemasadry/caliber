      </div>
            <div class="mb-4">
        <h5>Retail price</h5>
        <%= @shoe.retail_price %>
      </div>
            <div class="mb-4">
        <h5>Type of</h5>
        <%= @shoe.type_of %>
      </div>
            <div class="mb-4">
        <h5>Gender</h5>
        <%= @shoe.gender %>
      </div>
            <div class="mb-4">
        <h5>Material</h5>
        <%= @shoe.material %>
      </div>
            <div class="mb-4">
        <h5>Primary color</h5>
        <%= @shoe.primary_color %>
      </div>
            <div class="mb-4">
        <h5>Secondary color</h5>
        <%= @shoe.secondary_color %>
      </div>
            <div class="mb-4">
        <h5>Product url</h5>
        <%= @shoe.product_url %>
      </div>
          </div>
  </div>
</div>
