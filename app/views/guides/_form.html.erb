<%= form_with(model: guide, html: { enctype: "multipart/form-data" }) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <!-- ADD COVER IMAGE -->
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.rich_text_area :body, data: { controller: "mentions", target: "mentions.field" }, class: "rich-textarea" %>
  </div>

  <div class="flex flex-wrap overflow-hidden lg:-mx-1 xl:-mx-1">

    <div class="w-full overflow-hidden lg:my-1 lg:px-1 lg:w-1/3 xl:my-1 xl:px-1 xl:w-1/3">
      <div class="form-group">
        <%= form.label :category %>

        <div class="relative">
          <%= form.select :category, options_for_select(["Category One", "Category Two"]), { prompt: "Select category...", include_blank: true }, class: "form-control" %>
          <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
        </div>
      </div>
    </div>

    <div class="w-full overflow-hidden lg:my-1 lg:px-1 lg:w-1/3 xl:my-1 xl:px-1 xl:w-1/3">
      <div class="form-group">
        <%= form.label :subcategory_one %>

        <div class="relative">
          <%= form.select :subcategory_one, options_for_select(["Category One", "Category Two"]), { prompt: "Select subcategory one...", include_blank: true }, class: "form-control" %>
          <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
        </div>
      </div>
    </div>

    <div class="w-full overflow-hidden lg:my-1 lg:px-1 lg:w-1/3 xl:my-1 xl:px-1 xl:w-1/3">
      <div class="form-group">
        <%= form.label :subcategory_two %>

        <div class="relative">
          <%= form.select :subcategory_two, options_for_select(["Category One", "Category Two"]), { prompt: "Select category two...", include_blank: true }, class: "form-control" %>
          <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
        </div>
      </div>
    </div>

  </div>

  <div class="form-group">
    <%= form.label :tags, "Tags" %>
    <%= form.text_field :tag_list, value: form.object.tag_list.to_s, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
