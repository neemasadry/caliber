<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Cosmetics</h1>

    <% if @cosmetics.any? %>
      <%= link_to 'New Cosmetic', new_cosmetic_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @cosmetics.any? %>
    <div class="bg-white rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :user_id, 'User', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :brand_id, 'Brand', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :name, 'Name', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :product_image_data, 'Product image data', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :description, 'Description', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :retail_price, 'Retail price', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :type_of, 'Type of', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :gender, 'Gender', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :ingredients, 'Ingredients', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @cosmetics, :product_url, 'Product url', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 w-20">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @cosmetics.each do |cosmetic| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                      <td class="p-3"><%= cosmetic.user_id %></td>
                      <td class="p-3"><%= cosmetic.brand_id %></td>
                      <td class="p-3"><%= cosmetic.name %></td>
                      <td class="p-3"><%= cosmetic.product_image_data %></td>
                      <td class="p-3"><%= cosmetic.description %></td>
                      <td class="p-3"><%= cosmetic.retail_price %></td>
                      <td class="p-3"><%= cosmetic.type_of %></td>
                      <td class="p-3"><%= cosmetic.gender %></td>
                      <td class="p-3"><%= cosmetic.ingredients %></td>
                      <td class="p-3"><%= cosmetic.product_url %></td>
          
            <td>
              <%= link_to "View", cosmetic, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class="bg-white rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Cosmetic</p>
        <%= link_to 'New Cosmetic', new_cosmetic_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
