<!-- This example requires Tailwind CSS v1.4.0+ -->
<div class="relative nav-link" data-controller="dropdown">
  <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" class="inline-block select-none">
    <!-- Item active: "text-gray-900", Item inactive: "text-gray-500" -->
    <button type="button" class="group text-gray-700 inline-flex items-center space-x-2 text-base leading-6 font-medium hover:text-gray-900 focus:outline-none focus:text-gray-900 transition ease-in-out duration-150">
      <span>Browse</span>
      <!-- Item active: "text-gray-600", Item inactive: "text-gray-400" -->
      <svg class="text-gray-400 h-5 w-5 group-hover:text-gray-500 group-focus:text-gray-500 transition ease-in-out duration-150" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>

    <!--
      Flyout menu, show/hide based on flyout menu state.

      Entering: "transition ease-out duration-200"
        From: "opacity-0 translate-y-1"
        To: "opacity-100 translate-y-0"
      Leaving: "transition ease-in duration-150"
        From: "opacity-100 translate-y-0"
        To: "opacity-0 translate-y-1"
    -->

    <div data-target="dropdown.menu" class="hidden">
      <div class="z-40 absolute left-1/2 transform -translate-x-32 mt-3 px-2 w-screen max-w-md sm:px-0">
        <div class="rounded-lg shadow-lg">
          <div class="rounded-lg shadow-xs overflow-hidden">
            <div class="z-20 relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
              <%= link_to products_path, class: '-m-3 p-3 flex items-start space-x-4 rounded-lg hover:bg-gray-100 transition ease-in-out duration-150' do %>
                <%= fa_icon("fal fa-bags-shopping fa-lg", class: "flex-shrink-0 h-6 w-6 text-indigo-600") %>
                <div class="space-y-1">
                  <p class="text-base leading-6 font-medium text-gray-900">
                    Products
                  </p>
                  <p class="text-sm leading-5 text-gray-500">
                    Find products from world-renowned brands and up-and-coming brands and everything in between.
                  </p>
                </div>
              <% end %>

              <%= link_to brands_path, class: '-m-3 p-3 flex items-start space-x-4 rounded-lg hover:bg-gray-100 transition ease-in-out duration-150' do %>
                <%= fa_icon("fal fa-store fa-lg", class: "flex-shrink-0 h-6 w-6 text-indigo-600") %>
                <div class="space-y-1">
                  <p class="text-base leading-6 font-medium text-gray-900">
                    Brands
                  </p>
                  <p class="text-sm leading-5 text-gray-500">
                    Explore the brands that are aiming to revolutionize fashion, health, and technology.
                  </p>
                </div>
              <% end %>

              <%= link_to catalogs_path, class: '-m-3 p-3 flex items-start space-x-4 rounded-lg hover:bg-gray-100 transition ease-in-out duration-150' do %>
                <%= fa_icon("fal fa-book-open fa-lg", class: "flex-shrink-0 h-6 w-6 text-indigo-600") %>
                <div class="space-y-1">
                  <p class="text-base leading-6 font-medium text-gray-900">
                    Catalogs
                  </p>
                  <p class="text-sm leading-5 text-gray-500">
                    Explore catalogs created by other users to find a new and interesting collection of resources.
                  </p>
                </div>
              <% end %>

              <%= link_to guides_path, class: '-m-3 p-3 flex items-start space-x-4 rounded-lg hover:bg-gray-100 transition ease-in-out duration-150' do %>
                <%= fa_icon("fal fa-book-reader fa-lg", class: "flex-shrink-0 h-6 w-6 text-indigo-600") %>
                <div class="space-y-1">
                  <p class="text-base leading-6 font-medium text-gray-900">
                    Guides
                  </p>
                  <p class="text-sm leading-5 text-gray-500">
                    Explore guides created by other users for useful information, ranging from improving your wardrobe to eating healthier, and everything in between.
                  </p>
                </div>
              <% end %>

              <%= link_to outfits_path, class: '-m-3 p-3 flex items-start space-x-4 rounded-lg hover:bg-gray-100 transition ease-in-out duration-150' do %>
                <%= fa_icon("fal fa-user-tie fa-lg", class: "flex-shrink-0 h-6 w-6 text-indigo-600") %>
                <div class="space-y-1">
                  <p class="text-base leading-6 font-medium text-gray-900">
                    Outfits
                  </p>
                  <p class="text-sm leading-5 text-gray-500">
                    Discover new outfits created by other members of the community.
                  </p>
                </div>
              <% end %>

              <%= link_to routines_path, class: '-m-3 p-3 flex items-start space-x-4 rounded-lg hover:bg-gray-100 transition ease-in-out duration-150' do %>
                <%= fa_icon("fal fa-repeat fa-lg", class: "flex-shrink-0 h-6 w-6 text-indigo-600") %>
                <div class="space-y-1">
                  <p class="text-base leading-6 font-medium text-gray-900">
                    Routines
                  </p>
                  <p class="text-sm leading-5 text-gray-500">
                    Find the best routine that works for you.
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
