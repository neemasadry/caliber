<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to @collection.user.username, user_profile_path(@collection.user) %> > <%= link_to 'Collections', user_profile_collections_path %> > <%= @collection.collection_type %></h1>
    </div>

    <div class="bg-white rounded shadow p-8">

      <div class="my-4">
        <% @collection_items.each do |item| %>
          <%= link_to item.collectable_item.name, polymorphic_path(item.collectable_item) %> by <%= link_to item.collectable_item.brand.name, brand_path(item.collectable_item.brand) %> - <%= number_to_currency(item.collectable_item.retail_price) %> <br>
        <% end %>
      </div>

      <hr class="my-4">

      <div class="text-center flex flex-wrap overflow-hidden md:-mx-1 lg:-mx-1 xl:-mx-1">
        <div class="w-full overflow-hidden md:my-1 md:px-1 md:w-1/2 lg:my-1 lg:px-1 lg:w-1/2 xl:my-1 xl:px-1 xl:w-1/2">
          <h5>Total items</h5>
          <%= @collection.total_items %>
        </div>

        <div class="w-full overflow-hidden md:my-1 md:px-1 md:w-1/2 lg:my-1 lg:px-1 lg:w-1/2 xl:my-1 xl:px-1 xl:w-1/2">
          <h5>Total price</h5>
          <%= number_to_currency(@collection.total_price) %>
        </div>
      </div>

    </div>
  </div>
</div>
