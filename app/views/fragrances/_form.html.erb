<%= form_with(model: fragrance) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :brand_id %>
    <%= form.text_field :brand_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :retail_price %>
    <%= form.text_field :retail_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :release_date %>
    <%= form.text_field :release_date, class: "form-control", data: { controller: :flatpickr, flatpickr_alt_input: true, flatpickr_alt_format: t("date.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients %>
    <%= form.text_area :ingredients, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :top_notes %>
    <%= form.text_field :top_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :middle_notes %>
    <%= form.text_field :middle_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :base_notes %>
    <%= form.text_field :base_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :accords %>
    <%= form.text_field :accords, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :product_url %>
    <%= form.text_area :product_url, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
