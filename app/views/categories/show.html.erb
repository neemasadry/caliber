<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to 'Categories', categories_path %> > Category #<%= @category.id %></h1>
      <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
            <div class="mb-4">
        <h5>Name</h5>
        <%= @category.name %>
      </div>
            <div class="mb-4">
        <h5>Subcategory count</h5>
        <%= @category.subcategories_count %>
      </div>
            <div class="mb-4">
        <h5>Ancestry</h5>
        <%= @category.ancestry %>
      </div>
          </div>
  </div>
</div>
